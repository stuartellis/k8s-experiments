# Defaults for editor applications
#
# See: https://EditorConfig.org

# Specifies that this is the top-level EditorConfig
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 88
trim_trailing_whitespace = false

[{Dockerfile, *.dockerfile}]
indent_style = space
indent_size = 4

[{go.mod,go.sum,*.go}]]
indent_style = tab
indent_size = 4

[*.java]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[{justfile, *.just}]
indent_style = space
indent_size = 4

[{Makefile, *.mk}]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[*.{py,rst}]
indent_style = space
indent_size = 4

[*.rs]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 4

[*.{tf,tfvars}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 4

[*.tsv]
indent_style = tab
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
